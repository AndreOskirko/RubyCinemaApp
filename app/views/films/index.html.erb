

<% @films.each do |film| %>




  <div class="card" style="margin: 40px">

    <div class="card-body">
      <h3 class="card-title"><%=link_to film.f_title, film_path(film) %></h3>
      <p class="card-text"><%=  film.f_body%></p>

    </div>
  </div>

<% end %>

<%= link_to "Add a New film", new_film_path, class: "btn btn-outline-primary my-2 my-sm-0", style: "margin: 40px" %>

