

<% @theatres.each do |theatre| %>




  <div class="card" style="margin: 40px">

    <div class="card-body">
      <h5 class="card-title"><%=link_to theatre.t_title, theatre_path(theatre) %></h5>
      <p class="card-text"><%=  theatre.t_body%></p>

    </div>
  </div>

<% end %>
